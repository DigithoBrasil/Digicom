extends ../layout

block content
	h1 Todos os lançamentos

	form

	p
		a(href="/lancamento/incluir") Incluir

	p
		a(href=consultaAnterior) <

	p
		a(href=proximaConsulta) >

	table
		thead
			tr
				td Data
				td Finalidade
				td Detalhes da compra
				td Valor

		tbody
			- if (lancamentos.length == 0)
				td(colspan="4") Nenhum lançamento encontrado

			-else
				- each lancamento in lancamentos
					tr
						td= lancamento.data
						td= lancamento.finalidade
						td= lancamento.detalhesDaCompra
						td= lancamento.valor

		tfoot
			tr
				td(colspan="3") Receita
				td= caixa.receita
			tr
				td(colspan="3") Despesa
				td= caixa.despesa
			tr
				td(colspan="3") Total
				td= caixa.total